---
import ThemeButton from "../components/ThemeButton.astro";
import { Content as Bio } from '../content/Bio.md'
import MainLayout from "../layouts/MainLayout.astro";
import SocialBar from "../components/SocialBar.astro";
---

<MainLayout showFooter={true}>
  <main class="wrapper">
    <section
      class="container p-0 max-w-screen-lg h-min mx-auto flex flex-col sm:flex-row justify-between items-stretch gap-4">
      <section class="container flex flex-col gap-4 sm:gap justify-between">
        <div class="">
          <ThemeButton client:idle />
          <h1 class="tracking-tight">Hey, it's Kelvin 👋🏼</h1>
          <h2>Frontend Engineer</h2>
          <h2 class="underline">based in Toronto</h2>
        </div>
        <p>Currently at <a href="https://twg.io/" target="_blank">TWG + Deloitte</a></p>
        <div class="container p-0">
          <SocialBar />
          <a href="/resume">Resume/CV</a>
        </div>
      </section>
      <section class="container font-sans flex flex-col gap-4">
        <Bio />
      </section>
    </section>
  </main>
</MainLayout>