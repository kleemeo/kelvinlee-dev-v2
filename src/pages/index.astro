---
import ThemeButton from "../components/ThemeButton.astro";
import { Content as Bio } from '../content/Bio.md'
import MainLayout from "../layouts/MainLayout.astro";
import SocialBar from "../components/SocialBar.astro";
---

<MainLayout>
  <main class="wrapper">
    <section class="container max-w-screen-lg h-min mx-auto flex justify-between items-stretch">
      <section class="container flex flex-col gap justify-between">
        <div>
          <h1 class="">Hey, it's Kelvin 👋🏼</h1>
          <h2>A Frontend Engineer</h2>
          <h2 class="underline">based in Toronto</h2>
        </div>
        <p>Currently at <a href="https://twg.io/">TWG + Deloitte</a></p>
        <div class="container p-0">
          <SocialBar />
          <a href="/resume">Resume/CV</a>
          <ThemeButton />
        </div>
      </section>
      <section class="container font-sans flex flex-col gap-4">
        <Bio />
      </section>
    </section>
  </main>
</MainLayout>