---
import NavBar from '../components/NavBar.astro';
import MainLayout from './MainLayout.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  frontmatter: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<MainLayout>
  <main class='wrapper'>
    <NavBar />
    <section class='flex-1 max-w-screen-lg mx-auto px-2 sm:px-10'>
      <slot></slot>
    </section>
  </main>
</MainLayout>
